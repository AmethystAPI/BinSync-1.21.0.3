script/source = "extends CharacterBody2D

@export var PROJECTILE_RESOURCE: Resource

const SPEED = 100.0

const KNOCKBACK_POWER = 300.0
const KNOCKBACK_DECAY = 12.0
const KNOCKBACK_MINIMUM = 10

var health = 6
var knockback = Vector2.ZERO

func _ready():
	GameManager.Players.append(self)
	
func _input(event):
	if event.is_action_pressed(\"shoot\"):		
		var instance = PROJECTILE_RESOURCE.instantiate()
		
		get_parent().add_child(instance)
		
		instance.global_position = global_position
		instance.look_at(get_global_mouse_position())
		instance.global_position += instance.global_transform.x * 16
	
func _move():
	if knockback.length() > KNOCKBACK_MINIMUM:
		return
		
	var movement = Vector2(Input.get_axis(\"move_left\", \"move_right\"), Input.get_axis(\"move_up\", \"move_down\")).normalized()
	
	velocity = movement * SPEED
	
	if velocity.x > 0:
		$AnimatedSprite.scale.x = 1
	elif velocity.x < 0:
		$AnimatedSprite.scale.x = -1
	
	if velocity.length() > 0:
		$AnimatedSprite.play(\"run\")
	else:
		$AnimatedSprite.play(\"idle\")
		
func _knockback(delta):
	if knockback.length() <= KNOCKBACK_MINIMUM:
		return
	
	velocity = knockback
	knockback = knockback.lerp(Vector2.ZERO, delta * KNOCKBACK_DECAY)
	
	if velocity.x > 0:
		$AnimatedSprite.scale.x = -1
	elif velocity.x < 0:
		$AnimatedSprite.scale.x = 1
	
	$AnimatedSprite.play(\"hurt\")

func _physics_process(delta):
	_knockback(delta)
	_move()

	move_and_slide()

func Hurt(damage, source_position):
	health -= damage
	knockback = (global_position - source_position).normalized() * KNOCKBACK_POWER
"

